  <!-- Floating flowers -->
  <div id="flowers"></div>

  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const memory1 = document.getElementById('memory1');
    const memory2 = document.getElementById('memory2');
    const memory3 = document.getElementById('memory3');
    const final = document.getElementById('final');
    const next1 = document.getElementById('next1');
    const next2 = document.getElementById('next2');
    const next3 = document.getElementById('next3');
    const flowersDiv = document.getElementById('flowers');
    const animal1 = document.getElementById('animal1');

    // Flower animation
    function createFlower() {
      const flower = document.createElement('div');
      flower.classList.add('flower');
      flower.style.left = Math.random() * window.innerWidth + 'px';
      flower.style.fontSize = 20 + Math.random() * 30 + 'px';
      flower.innerText = 'ğŸŒ¸';
      flowersDiv.appendChild(flower);
      setTimeout(() => flower.remove(), 5000);
    }
    setInterval(createFlower, 500);

    // Animal animation
    function animateAnimal() {
      const x = Math.random() * (window.innerWidth - 50);
      const y = Math.random() * (window.innerHeight - 50);
      animal1.style.left = x + 'px';
      animal1.style.top = y + 'px';
    }
    setInterval(animateAnimal, 1000);

    // Yes button
    yesBtn.addEventListener('click', () => {
      memory1.classList.remove('hidden');
      yesBtn.style.display = 'none';
      noBtn.style.display = 'none';
    });

    // No button - run away effect
    noBtn.addEventListener('mouseenter', () => {
      const x = Math.random() * (window.innerWidth - 100);
      const y = Math.random() * (window.innerHeight - 50);
      noBtn.style.position = 'absolute';
      noBtn.style.left = x + 'px';
      noBtn.style.top = y + 'px';
    });

    // Continue buttons
    next1.addEventListener('click', () => {
      memory1.style.display = 'none';
      memory2.classList.remove('hidden');
    });

    next2.addEventListener('click', () => {
      memory2.style.display = 'none';
      memory3.classList.remove('hidden');
    });

    next3.addEventListener('click', () => {
      memory3.style.display = 'none';
      final.classList.remove('hidden');
    });
  </script>
